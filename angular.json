{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "web-home": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "changeDetection": "OnPush",
          "viewEncapsulation": "None"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": {
              "base": "dist/dev"
            },
            "index": "src/presentation/index.html",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/presentation/assets",
              "src/presentation/favicon.ico"
            ],
            "styles": [
              "src/presentation/styles/main.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/presentation/styles",
                "."
              ]
            },
            "allowedCommonJsDependencies": [
              "babylonjs-materials"
            ],
            "scripts": [],
            "browser": "src/presentation/app/main.ts",
            "server": "src/presentation/app/main.server.ts",
            "prerender": true
          },
          "configurations": {
            "production": {
              "outputPath": {
                "base": "dist/prod"
              },
              "fileReplacements": [
                {
                  "replace": "src/infrastructure/environments/environment.ts",
                  "with": "src/infrastructure/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "10kb",
                  "maximumError": "15kb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "web-home:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "web-home:build:production"
            },
            "development": {
              "buildTarget": "web-home:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "web-home:build"
          }
        },
        "test": {
          "builder": "",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/presentation/favicon.ico",
              "src/presentation/assets"
            ],
            "styles": [
              "src/presentation/styles/main.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": "eslint.config.js",
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "angular-eslint"
    ]
  }
}
